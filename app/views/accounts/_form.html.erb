<%= form_for @account, url: group_accounts_path, html: { method: :post }  do |form| %>
  <%# <%= render "formErr/error_form_message" %>
  <div class="form-group">
    <%= form.label "Name", style: "display: block" %>
    <%= form.text_field :name, required: true, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label "Amount", style: "display: block" %>
    <%= form.number_field :amount, required: true, class: "form-control" %>
  </div>
  <div class="form-group mt-4">
    <%= select_tag "group", options_for_select(@groups.map { |group| [group.name, group.id] }), {prompt:"Select Category", required:true, class:"form-select"}%>
  </div>
  <%= form.submit "Create Transaction", class: "btn btn-primary mt-4"%>
<% end %>
